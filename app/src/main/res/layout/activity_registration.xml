<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingTop="20dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".Registration">

    <EditText
        android:id="@+id/company_name"
        android:layout_width="339dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="Company Name"
        android:paddingLeft="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_action_company"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="59dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_action_address"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="201dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_action_contact"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Contact No."
        android:maxLength="10"
        android:inputType="phone"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="261dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_action_email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/contact_person"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:paddingLeft="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_action_contact_person"
        android:hint="Contact Person Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submit"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:background="@drawable/edit_round_buton"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Registration"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:layout_marginStart="52dp"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="130dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView9"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="146dp"
        android:layout_height="10dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:text="Meeting Schedular App V.1.0"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="10sp"
        android:text="powered by DIGITECH UNICORN" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>